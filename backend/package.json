{
  "name": "anki-interview-backend",
  "version": "0.1.0",
  "private": true,
  "description": "Backend API for Anki Interview App - Cloudflare Workers + D1",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy:dev": "wrangler deploy --env dev",
    "deploy:prod": "wrangler deploy --env production",
    "db:migrate": "wrangler d1 migrations apply anki-interview-db --local",
    "db:migrate:dev": "wrangler d1 migrations apply anki-interview-db --remote",
    "db:migrate:prod": "wrangler d1 migrations apply anki-interview-db-prod --remote",
    "db:seed": "wrangler d1 execute anki-interview-db --local --file=./db/seed.sql",
    "db:shell": "./scripts/db-shell.sh",
    "db:query": "wrangler d1 execute anki-interview-db --local --command",
    "db:info": "wrangler d1 info anki-interview-db --local",
    "db:tables": "wrangler d1 execute anki-interview-db --local --command \"SELECT name FROM sqlite_master WHERE type='table';\"",
    "db:export": "./scripts/export-to-csv.sh",
    "db:import": "./scripts/import-from-csv.sh",
    "fetch-parse": "tsx scripts/github-sync/fetch-and-parse.ts",
    "generate-answers": "tsx scripts/github-sync/generate-answers.ts",
    "upsert-data": "wrangler dev --local scripts/github-sync/upsert-data.ts --test-scheduled",
    "test:parse": "wrangler dev --local scripts/test-parse.ts --test-scheduled",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "validate": "tsx scripts/validate-multi-tenancy.ts",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "hono": "^4.0.0",
    "jose": "^6.1.2",
    "openai": "^6.9.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "@vitest/coverage-v8": "^2.1.8",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^2.1.8",
    "wrangler": "^4.0.0"
  }
}
